<!-- Template for Responsive Menu -->
<nav class="responsive-menu" role="navigation">
  <ul class="nav navbar-nav pull-right">
    <li class="nav-item" data-ng-repeat="element in menuElements.desktop | orderBy:'order' track by $index">
      <a class="nav-link {{classes}}" href="#" data-ui-sref="{{element.sref}}" data-ng-bind-template="{{element.name}}"></a>
    </li>
    <li class="nav-item hamburger-toggle clickable" data-ng-class="{'active': menuElements.is_open}" data-ng-click="menuElements.is_open = !menuElements.is_open" data-ng-show="!isMobileEmpty" data-click-anywhere-not-here="closeMenu()">
      <div class="hamburger-icon">
        <span class="hamburger-icon-bullet"></span>
      </div>
      <span class="sr-only">Mobile Menu</span>
    </li>
  </ul>
</nav>

<nav class="mobile-menu" data-ng-class="{'opened': menuElements.is_open}" role="navigation" data-ng-show="!isMobileEmpty" data-click-anywhere-not-here="closeMenu()">
  <div class="col-xs-12 scrollable">
    <%= image_tag 'favicon.jpg', :class => "img-fluid mobile-logo" %>
    <ul class="nav">
      <li class="nav-item" data-ng-repeat="element in menuElements.mobile | orderBy:'order':true">
        <a class="nav-link {{classes}}" data-ui-sref="{{element.sref}}" data-ng-bind-template="{{element.name}}"></a>
      </li>
    </ul>
  </div>
</nav>