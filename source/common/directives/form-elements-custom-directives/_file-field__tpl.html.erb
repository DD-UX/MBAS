<!-- Template for custom file field -->

<label class="custom-file-field clickable">
  <input data-ng-if="isMultiple" type="file" multiple class="clickable">

  <input data-ng-if="!isMultiple" type="file" class="clickable">

  <div class="decoy-file-field {{decoyStyles}}" data-ng-class="{'empty': !model.length}">

    <span class="upload-icon" data-ng-if="!$files.length && !uploadIconHtml">
      <i class="fa fa-upload"></i>
    </span>
    <span class="upload-icon" data-ng-if="!model.length && uploadIconHtml" data-ng-bind-html="uploadIconHtml"></span>


    <span data-ng-if="!model.length && defaultMsg.length" data-ng-bind="defaultMsg"></span>
    <span data-ng-if="!model.length && !defaultMsg.length">Please select a file to start</span>
    <ul class="list-unstyled files-list" data-ng-if="model.length">
      <li class="file-item" data-ng-repeat="(k, f) in model track by $index" data-ng-bind="f.name"></li>
    </ul>
  </div>
</label>